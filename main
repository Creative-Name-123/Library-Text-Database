import tkinter
from tkinter import *
from tkinter import ttk
from tkinter import scrolledtext


# Opening the list of books
book_list = open("books", "r")
book_list = str(book_list).split("`")
book_list.pop(0)
print(book_list)



def print_stuff():
    book_list = ["a", "ab", "abc", "abcd",
                 "abcdefghijklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyz", "a", "ab", "abc",
                 "abcd", "abcdefghijklmnopqrstuvwxyz"]
    list_window = Toplevel()
    list_window.title("Books:")
    ttk.Label(list_window, text=str(book_list))
    list_area = scrolledtext.ScrolledText(list_window, wrap=tkinter.WORD, width=30, height=10)
    for i in range(len(book_list)):
        list_area.insert(END, book_list[i])
        list_area.insert(END, "\n")
    list_area.pack(fill=BOTH, side=LEFT, expand=TRUE)
    return "nothing"


# Opening book file
book = open("books", "r")
print(book.read())
# Creating a tkinter window
root = Tk()

# Initialize tkinter window
root.geometry('500x250')


# Creating an actual button
btnSeeBooks = Button(root, text="See all books", command=print_stuff)
btnSeeBooks.place(x=5, y=5)


root.mainloop()
