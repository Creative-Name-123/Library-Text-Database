from tkinter import *
import tkinter.messagebox

variable = 0
x = -50
y = 30

# Opening book file
book = open("books", "r")
print(book.read())
# Creating a tkinter window
root = Tk()

# Initialize tkinter window
root.geometry('500x250')

# Creating a Button
btn = Button(root, text="Click me!")
btn.pack()

# Creating an actual button
btnSeeBooks = Button(root, text="See all books")
btnSeeBooks.place(x=70, y=0)


# Defining method on click
def Clicked(event):
    global variable
    global x
    global y
    x += 55
    if x > 450:
        x = 0
        y += 30
    variable += 1
    btn2 = Button(root, text='Score: ' + str(variable), foreground="purple")
    btn2.place(x=x, y=y)
    btn2.bind("<Button-2>", Clicked)


def print_stuff(event):
    #book_list = book.read()
    book_list = ["a", "ab", "abc", "abcd"]
    tkinter.messagebox.showinfo(title="Books:", message=("\n".join(book_list)))


# bind button
btn.bind("<Button-1>", Clicked)
btn.pack()
btnSeeBooks.bind("<Button-3>", print_stuff)
root.mainloop()
